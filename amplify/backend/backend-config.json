{
  "storage": {
    "dailyPrices": {
      "service": "DynamoDB",
      "providerPlugin": "awscloudformation"
    }
  },
  "function": {
    "dailyPrices": {
      "build": true,
      "providerPlugin": "awscloudformation",
      "service": "Lambda",
      "dependsOn": [
        {
          "category": "storage",
          "resourceName": "dailyPrices",
          "attributes": [
            "Name",
            "Arn"
          ],
          "attributeEnvMap": {
            "Name": "TABLE_NAME",
            "Arn": "TABLE_ARN"
          }
        }
      ]
    },
    "handlePrices": {
      "build": true,
      "providerPlugin": "awscloudformation",
      "service": "Lambda",
      "dependsOn": [
        {
          "category": "storage",
          "resourceName": "dailyPrices",
          "attributes": [
            "Name",
            "Arn"
          ],
          "attributeEnvMap": {
            "Name": "TABLE_NAME",
            "Arn": "TABLE_ARN"
          }
        }
      ]
    },
    "updatePricesDaily": {
      "build": true,
      "providerPlugin": "awscloudformation",
      "service": "Lambda",
      "dependsOn": [
        {
          "category": "storage",
          "resourceName": "dailyPrices",
          "attributes": [
            "Name",
            "Arn",
            "StreamArn"
          ]
        },
        {
          "category": "api",
          "resourceName": "btcApi",
          "attributes": [
            "ApiName",
            "ApiId"
          ]
        }
      ]
    }
  },
  "api": {
    "btcApi": {
      "service": "API Gateway",
      "providerPlugin": "awscloudformation",
      "dependsOn": [
        {
          "category": "function",
          "resourceName": "handlePrices",
          "attributes": [
            "Name",
            "Arn"
          ]
        }
      ]
    }
  }
}